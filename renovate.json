{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "schedule": [
    "before 4am on monday"
  ],
  "labels": ["dependencies"],
  "rangeStrategy": "pin",
  "separateMajorMinor": true,
  "helm-values": {
    "fileMatch": ["^chart/.+/values\\.yaml$", "^chart/.+/Chart\\.yaml$"]
  },
  "packageRules": [
    {
      "matchManagers": ["pip_requirements"],
      "groupName": "python dependencies"
    },
    {
      "matchManagers": ["helm-values", "helmv3"],
      "groupName": "helm chart dependencies"
    },
    {
      "matchDatasources": ["docker"],
      "matchPackageNames": ["ghcr.io/benni1390/fddb-exporter"],
      "groupName": "fddb-exporter docker image"
    }
  ]
}
